{% use '@CheclouFlatFileCMS/_partials/page_data.html.twig' %}

{% block checlou_flat_file_cms_page_head %}
<title>{{  block('checlou_flat_file_cms_data_page_meta_title') }}</title>
<meta name="description" content="{{  block('checlou_flat_file_cms_data_page_meta_description')|striptags|e('html_attr') }}">
<meta name="keywords" content="{{  block('checlou_flat_file_cms_data_page_meta_description')|striptags|e('html_attr') }}">
{% block checlou_flat_file_cms_data_page_meta_og %}
<meta property="og:title" content="{{ block('checlou_flat_file_cms_data_page_title')|e('html_attr') }}" />
<meta property="og:description" content="{{ block('checlou_flat_file_cms_data_page_meta_description')|striptags|e('html_attr') }}" />
<meta property="og:type" content="{{ (page.headers.type == 'post')?'article':'page' }}" />
<meta property="og:locale" content="fr_FR" />
<meta property="og:url" content="{{ checlou_flat_file_cms_page_path(page, false) }}" />
{% if checlou_flat_file_cms_page_has_feature_image(page) %}
<meta property="og:image" content="{{ absolute_url(asset(checlou_flat_file_cms_page_feature_image_url(page))) }}" />
{% endif %}
{% endblock %}
{% endblock %}